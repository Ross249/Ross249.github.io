<ul class="indicator">
	<li class="indicator-dot active" data-section="0"></li>
	<li class="indicator-dot" data-section="1"></li>
	<li class="indicator-dot" data-section="2"></li>
	<li class="indicator-dot" data-section="3"></li>
</ul>

<style>
	.indicator {
		position: fixed;
		right: 2rem;
		top: 50%;
		transform: translateY(-50%);
		z-index: 1000;
	}
	.indicator-dot {
		width: 0.5rem;
		height: 0.5rem;
		border-radius: 50%;
		background-color: #ccc;
		margin: 0.5rem 0;
		cursor: pointer;
		transition: background-color 0.3s ease;
	}
	.indicator li.active {
		background-color: #2c3a2f;
	}
</style>
