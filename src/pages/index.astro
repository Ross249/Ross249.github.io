---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import NavigationIndictor from "../components/NavigationIndictor.astro";
import Footer from "../components/Footer.astro";
import FloatSub from "../components/FloatSub.astro";
---

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { ScrollToPlugin } from "gsap/ScrollToPlugin";

  gsap.registerPlugin(ScrollTrigger);
  gsap.registerPlugin(ScrollToPlugin);

  // Rectangle animations - keep these unchanged
  gsap.fromTo(
    "#leftRect",
    {
      xPercent: -100, // Start completely off-screen to the left
    },
    {
      xPercent: 0, // Move to original position
      duration: 5,
      ease: "power4.out",
    },
  );

  gsap.fromTo(
    "#rightRect",
    {
      xPercent: 100, // Start completely off-screen to the right
    },
    {
      xPercent: 0, // Move to original position
      duration: 5,
      ease: "power4.out",
      delay: 0.3, // Add slight delay for staggered effect
    },
  );

  // Create immediate animation with no delays
  gsap
    .timeline({
      onStart: () => {
        document.body.style.visibility = "visible";
      },
    })
    .to(["#right-border", "#left-border"], {
      height: "100%",
      duration: 1,
      ease: "power2.inOut",
      stagger: 0,
    })
    .to(
      "#middle-border",
      {
        height: "100%",
        duration: 1,
        ease: "power2.inOut",
      },
      "<",
    );

  // Hide body until animation starts to prevent flash
  document.body.style.visibility = "hidden";

  // Name SVG handwriting animation
  const nameStroke = document.querySelector("#name-stroke") as SVGTextElement;
  const nameFill = document.querySelector("#name-fill") as SVGTextElement;

  // Calculate text length for stroke animation
  if (nameStroke) {
    const textLength = nameStroke.getComputedTextLength();
    nameStroke.style.strokeDasharray = String(textLength);
    nameStroke.style.strokeDashoffset = String(textLength);
  }

  // Animate the name drawing after a delay
  gsap
    .timeline({ delay: 0.8 })
    .to("#name-stroke", {
      strokeDashoffset: 0,
      duration: 2,
      ease: "power2.inOut",
    })
    .to(
      "#name-fill",
      {
        opacity: 1,
        duration: 0.5,
        ease: "power2.out",
      },
      "-=0.3",
    )
    .to(
      "#name-stroke",
      {
        opacity: 0,
        duration: 0.3,
        ease: "power2.out",
      },
      "-=0.3",
    );
</script>

<style>
  .sections-container {
    width: 100%;
    display: flex;
    flex-direction: column;
  }
  .section {
    width: 100%;
    min-height: 100vh;
    scroll-margin-top: 0;
  }
  .main-content {
    flex: 1 1 auto;
    border-left: 1px solid var(--palette-7);
    border-right: 1px solid var(--palette-7);
    position: relative;
    justify-content: center;
    overflow: hidden;
  }

  /* SVG Handwriting Animation Styles */
  #name-svg {
    color: var(--palette-1, #1a1a1a);
  }

  .name-text-stroke {
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
  }

  .name-text-fill {
    opacity: 0;
  }
</style>

<Layout title="Jim Luo">
  <Navigation />
  <!-- <NavigationIndictor /> -->
  <div class="sections-container">
    <section class="section" id="section1">
      <!-- Rect Effect -->
      <!-- Left Rectangle -->
      <div
        id="leftRect"
        class="w-[60vw] h-[30vh] bg-palette-7 fixed top-[28vh] left-0 z-2"
      >
      </div>

      <!-- Right Rectangle -->
      <div
        id="rightRect"
        class="w-[60vw] h-[30vh] bg-palette-7 fixed top-[46vh] right-0 z-2"
      >
      </div>

      <!-- Main content -->
      <div class="main-content">
        <FloatSub />
        <div class="w-full relative h-screen flex justify-center z-3">
          <div class="absolute w-[1px] bg-palette-7 h-0 z-1" id="middle-border">
          </div>

          <div class="w-full h-full z-5 py-20 relative mx-4 lg:mx-24">
            <img
              src="/images/banner.jpeg"
              alt="banner"
              class="w-full h-full object-cover"
            />
            <div class="absolute lg:w-2/3 top-20 bottom-20 flex flex-col z-12">
              <div
                class="max-w-3xl w-full space-y-6 p-4 bg-zinc-300/20 backdrop-blur-xs h-full backdrop-brightness-90 backdrop-contrast-125 flex flex-col items-center justify-center"
              >
                <h1
                  class="font-hw text-[clamp(3rem,15vw,8rem)] font-bold text-center tracking-tight text-palette-1"
                >
                  <svg
                    id="name-svg"
                    class="w-full h-auto overflow-visible"
                    viewBox="0 0 280 100"
                    preserveAspectRatio="xMidYMid meet"
                    style="color: var(--color-palette-1, #68869a);"
                  >
                    <!-- Stroke outline that gets drawn -->
                    <text
                      id="name-stroke"
                      x="50%"
                      y="70"
                      text-anchor="middle"
                      class="font-hw font-bold name-text-stroke"
                      fill="none"
                      stroke="var(--color-palette-1, #68869a)"
                      stroke-width="2"
                      style="font-size: 80px;">Jim Luo</text
                    >

                    <!-- Fill that appears after stroke -->
                    <text
                      id="name-fill"
                      x="50%"
                      y="70"
                      text-anchor="middle"
                      class="font-hw font-bold name-text-fill"
                      fill="var(--color-palette-1, #68869a)"
                      style="font-size: 80px;">Jim Luo</text
                    >
                  </svg>
                </h1>
                <p
                  class="font-qs text-gray-700/80 lg:text-xl leading-relaxed text-justify space-y-6 px-2"
                >
                  <span
                    class="block first-letter:text-3xl first-letter:font-bold"
                  >
                    Hello, I'm Jim Luo, a ex-software engineer. I love building
                    and creating because of the experience of playing Legos
                    since I was a child. That experience made me switch my major
                    from industrial design to software engineering in colleage.
                    I try my best to be a tech producer rather than a consumer.
                  </span>

                  <span class="block">
                    Currently exploring something useful, beautiful and
                    empowering.
                  </span>
                </p>
              </div>
            </div>

            <!-- Border Elements -->
            <div class="absolute inset-0">
              <!-- Right Border -->
              <div
                class="absolute right-0 bottom-0 w-[1px] bg-palette-7 h-0"
                id="right-border"
              >
              </div>
              <!-- Left Border -->
              <div
                class="absolute left-0 bottom-0 w-[1px] bg-palette-7 h-0"
                id="left-border"
              >
              </div>
            </div>
          </div>
        </div>
        <!-- Footer -->
        <Footer />
      </div>
    </section>
  </div>
</Layout>
